@using TestCasesInventory.Presenter.Models
@using PagedList;
@using PagedList.Mvc;
@using TestCasesInventory.Web.Common.Utils;
@model PagedList.IPagedList<TeamViewModel>
@{
    ViewBag.Title = "Team Home Page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminListingLayout.cshtml";
}

<h3>Teams</h3>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="pull-left">
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
                </div>
                <div class="pull-right">
                    @Html.Action("FilterForTeam", "Filter", new { area = "" })
                </div>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>
                                <h4>@Html.SortableLink(Request, "Name", "Name")</h4>
                            </th>
                            <th>
                                <h4>@Html.SortableLink(Request, "NumberMember", "Number Member")</h4>
                            </th>
                            <th>
                                <h4>@Html.SortableLink(Request, "CreatedBy", "Created By")</h4>
                            </th>
                            <th>
                                <h4>@Html.SortableLink(Request, "LastModifiedBy", "Last Modified By")</h4>
                            </th>
                            <th>
                                <h4>@Html.SortableLink(Request, "Created", "Created")</h4>
                            </th>
                            <th>
                                <h4>@Html.SortableLink(Request, "LastModified", "Last Modified")</h4>
                            </th>
                            <th>
                                <h4>Actions</h4>
                            </th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MembersNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastModified)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastModifiedDate)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })  |
                                    @Html.ActionLink("Add Users", "AssignUsersToTeam", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="box-footer clearfix">
                <div class="pull-right">
                    @Html.PagedListPager(Model, page => Request.AddQueryString(new KeyValuePair<string, string>("p", page.ToString())))
                </div>
            </div>
        </div>
    </div>
</div>