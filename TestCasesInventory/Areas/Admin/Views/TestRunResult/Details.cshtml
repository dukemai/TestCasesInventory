@using TestCasesInventory.Presenter.Models
@model TestRunResultViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDetailLayout.cshtml";
}
<h3> Details </h3>

<div>
    <h4>TestRun Result ID: @Model.ID </h4>
    <hr />
    <div class="information-test-suite-area">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    ID
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ID)
                </dd>
            </dl>
            <dl class="dl-horizontal">
                <dt>
                    Number of Test Cases
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NumberOfTestCases)
                </dd>
            </dl>
            <dl class="dl-horizontal">
                <dt>
                    Number of Passes Test Cases
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NumberOfPassedTestCases)
                </dd>
            </dl>
            <dl class="dl-horizontal">
                <dt>
                    Number of Failed Test Cases
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NumberOfFailedTestCases)
                </dd>
            </dl>
            <dl class="dl-horizontal">
                <dt>
                    Number of Skipped Test Cases
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NumberOfSkippedTestCases)
                </dd>
            </dl>
            <dl class="dl-horizontal">
                <dt>
                    Created by
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Created)
                </dd>
            </dl>
            <dl class="dl-horizontal">
                <dt>
                    Last Modified by
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.LastModified)
                </dd>
            </dl>
            <dl class="dl-horizontal">
                <dt>
                    Created
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>
            </dl>
            <dl class="dl-horizontal">
                <dt>
                    Last Modified
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.LastModifiedDate)
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            @{  Html.RenderPartial("TestRunResult/_TestRunResultHighChartPartial"); }
            <br/>
            @{  Html.RenderPartial("TestRunResult/_TestRunResultRunByHighChartPartial"); }
        </div>
    </div>
</div>


<p>
    @Html.ActionLink("Back to List", "Details", "TestRun", new { id = Model.TestRunID },"")
</p>