@using TestCasesInventory.Presenter.Models
@model TestCasesInTestRunViewModel
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Delete</h3>
<h4>Are you sure you want to delete this?</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            TestCase Title
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TestCaseTitle)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            TestSuite Title
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TestSuiteTitle)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            TestRun Title
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TestRunTitle)
        </dd>
    </dl>

    @using (Html.BeginForm(new { testRunID = Model.TestRunID }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Details", "TestRun", new { id = Model.TestRunID }, "")
        </div>
    }
</div>


