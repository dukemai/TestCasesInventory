@using TestCasesInventory.Presenter.Models
@model  List<UsersBelongTeamViewModel>

<table class="table table-bordered">
    <tr>
        <th>Email</th>
        <th>Display Name</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.ActionLink("Remove", "RemoveMembersFromTeam", "Team", new { teamID = item.TeamID, memberBeRemoved = item.ID }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }
</table>
