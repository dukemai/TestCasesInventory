@using TestCasesInventory.Presenter.Models
@using PagedList;
@using PagedList.Mvc;
@using TestCasesInventory.Web.Common.Utils;

@model  IPagedList<UsersBelongRoleViewModel>

@Html.Action("FilterForRemoveUsersFromRole", "Filter", new { area = "" })
<form action="~/Admin/Role/RemoveUsersFromRole/@ViewBag.RoleID" method="post">
    <table class="table">
        <tr>
            <th>Email</th>
            <th>Display Name</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" id=@item.ID name="usersBelongRole" value="@item.ID" />
                    <label for="@item.ID"> @item.Email</label>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
            </tr>
        }
    </table>
    @Html.PagedListPager(Model, page => Request.AddQueryString(new KeyValuePair<string, string>("p", page.ToString())))
    <input type="submit" value="Remove from Role" name="buttonSubmitIn" class="btn btn-default" />
</form>
