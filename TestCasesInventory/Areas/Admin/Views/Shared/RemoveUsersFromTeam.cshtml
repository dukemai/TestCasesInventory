@using TestCasesInventory.Presenter.Models
@using PagedList;
@using PagedList.Mvc;
@using TestCasesInventory.Web.Common.Utils;

@model  IPagedList<UsersBelongTeamViewModel>

@Html.Action("FilterForRemoveUsersFromTeam", "Filter", new { area = "", currentTabIndex = ViewBag.CurrentTabIndex })
<form action="~/Admin/Team/RemoveUsersFromTeam/@ViewBag.TeamID" method="post">
    <table class="table">
        <tr>
            <th>Email</th>
            <th>Display Name</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" id=@item.ID name="usersToRemove" value="@item.ID" />
                    <label for="@item.ID"> @item.Email</label>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName )
                </td>
            </tr>
        }
    </table>
@Html.PagedListPager(Model, page => Request.AddQueryString(new KeyValuePair<string, string>("p", page.ToString())))
    <input type="submit" value="Remove from Team" name="buttonSubmitIn" class="btn btn-default" />
</form>
