@using TestCasesInventory.Presenter.Models
@model TestRunViewModel

<div id="modal-container-run-testrun" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content view-test-suites">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> x </button>
                <h4>@Model.Title</h4>
            </div>
            <div class="modal-body" id="modalContent-run-testrun">
            </div>
            <div class="modal-footer">
                <input id="submit-pass" class="btn btn-default" type="button" value="Pass" data-status="Passed"/>
                <input id="submit-fail" class="btn btn-default" type="button" value="Fail" data-status="Failed"/>
                <input id="submit-skip" class="btn btn-default" type="button" value="Skip" data-status="Skipped"/>
                <input id="submit-done" class="btn btn-primary" type="button" value="Done" data-status="Done"/>
            </div>
        </div>
    </div>
</div>