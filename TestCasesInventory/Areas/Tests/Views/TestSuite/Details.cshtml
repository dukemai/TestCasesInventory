@using TestCasesInventory.Presenter.Models
@model TestSuiteViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Tests/Views/Shared/_TestsDetailLayout.cshtml";
}
<h3>Details</h3>

<div class="row">
    <div class="col-md-3">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">TestSuite: @Model.Title</h3>
            </div>
            <div class="box-body">
                <strong>
                    <i></i>
                    Title
                </strong>
                <p>@Model.Title</p>
                <strong>
                    <i></i>
                    Description
                </strong>
                <p>@Model.Description</p>
                <strong>
                    <i></i>
                    Team
                </strong>
                <p>@Model.TeamNameDisplayOnly</p>
                <strong>
                    <i></i>
                    Number of Test Cases
                </strong>
                <p>@Model.TestCasesNumber </p>
                <strong>
                    <i></i>
                    Created by
                </strong>
                <p>@Model.Created</p>
                <strong>
                    <i></i>
                    LastModified by
                </strong>
                <p>@Model.LastModified</p>
                <strong>
                    <i></i>
                    Created
                </strong>
                <p>@Model.CreatedDate</p>
                <strong>
                    <i></i>
                    LastModified
                </strong>
                <p>@Model.LastModifiedDate</p>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="box box-primary">
            <div class="box-header with-border">
                <b>TestCases for @Model.Title</b>
                <div class="pull-right">
                    @Html.ActionLink("Add new TestCase", "AddTestCase", new { id = Model.ID }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
        @Html.Action("Index", "TestCase", new { testSuiteID = Model.ID, page = ViewBag.Page, sortBy = ViewBag.SortBy, searchByTitle = ViewBag.SearchByTitle })
    </div>
</div>

<br>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<!-- Load Pop-ip modal -->
@{  Html.RenderPartial("TestCase/_TestCaseDetailPopUpPartial"); }