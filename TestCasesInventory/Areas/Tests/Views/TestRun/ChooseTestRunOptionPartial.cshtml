@using TestCasesInventory.Presenter.Models
@model CreateTestRunResultViewModel
@using (Html.BeginForm("Create", "TestRunResult"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.TestRunOption, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownListFor(model => model.TestRunOption, new SelectList(
                  new List<Object>{
                       new { value = "All Test Cases" , text = "All Test Cases"  },
                       new { value = "Assigned To Me" , text = "Assigned To Me"  },
                       new { value = "Selected Test Cases" , text = "Selected Test Cases"  },
                    },
                  "value",
                  "text",
                   2),
                   htmlAttributes: new { @class = "form-control" })
            </div>
            @Html.HiddenFor(model => model.TestRunID)
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" value="Submit and Run" class="btn btn-default" />
            </div>
        </div>
    </div>
}