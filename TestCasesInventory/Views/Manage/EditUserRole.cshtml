@model TestCasesInventory.Presenter.Models.UpdateRolesViewModel

@{
    ViewBag.Title = "Edit Your Roles";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*@Html.HiddenFor(model => model.ID)*@

        <div class="form-group">
            @Html.LabelFor(model =>model.UserRoles , htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("Name")*@
                @Html.DropDownListFor(model => model.UserRoles, new SelectList(
                  new List<Object>{
                       new { value = "Admin" , text = "Admin"  },
                    },
                  "value",
                  "text",
                   2), " ")
</div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
