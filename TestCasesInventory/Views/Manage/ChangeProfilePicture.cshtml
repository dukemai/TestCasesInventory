@model TestCasesInventory.Presenter.Models.IndexViewModel

@{
    ViewBag.Title = "Change Profile Picture";
}

<h3>@ViewBag.Title </h3>



@using (Html.BeginForm("ChangeProfilePicture", "Manage", FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    <label for="file"> Upload Image: </label>
    <input type="file" name="file" id="file" class="btn btn-default" /><br><br>
    <input type="submit" value="Upload Image" class="btn btn-default" />
    <br><br>
    @ViewBag.Message
}