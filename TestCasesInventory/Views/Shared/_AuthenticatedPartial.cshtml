@using TestCasesInventory.Config
@model TestCasesInventory.Presenter.Models.LoginStatusViewModel
@using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
{
    @Html.AntiForgeryToken()
    <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
            <li class="dropdown user user-menu">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    @{
                        if (Model.IsProfilePictureExisted)
                        {
                            <img class="user-image" src="@Url.Content(Model.ProfilePictureURL)" alt="User Image" />
                        }
                    }
                    <span class="hidden-xs"> @Model.DisplayName</span>
                </a>
                <ul class="dropdown-menu">
                    <li class="user-header">
                        @{
                            if (Model.IsProfilePictureExisted)
                            {
                                <img class="img-circle" src="@Url.Content(Model.ProfilePictureURL)" alt="User Image" />
                            }
                        }
                        <p>@Model.DisplayName
                            <small>@Model.Role</small>
                        </p>
                      
                    </li>
                    <li class="user-footer">
                        <div class="pull-left">
                            @Html.ActionLink("Profile", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "btn btn-default btn-flat" })
                        </div>
                        <div class="pull-right">
                            <a class="btn btn-default btn-flat" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                        </div>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
}
